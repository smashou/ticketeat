{# Login form #}
{% block content %}
        {% block fos_user_content %}
            {% if error %}
                <div class="bg-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <label for="username">Identifiant</label>
                <input type="text" id="username" class="form-control" name="_username" placeholder="Identifiant" value="{{ last_username }}" required="required" autofocus/>
                <label  for="password">Mot de passe</label>
                <input type="password" id="password" class="form-control" name="_password" placeholder="Mot de passe" required="required" />
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" > Se souvenir de moi 
                    </label>
                </div>
                <button class="btn btn-primary btn-block" id="_submit" name="_submit">S'identifier</button>
            </form>
        {% endblock fos_user_content %}
{% endblock %}

